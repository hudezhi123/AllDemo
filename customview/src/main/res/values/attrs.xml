<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- CircleProgressBar's attribute -->
    <attr name="InCircleR" format="dimension" />
    <attr name="OutCircleR" format="dimension" />
    <attr name="InCircleColor" format="color" />
    <attr name="OutCircleCacheColor" format="color" />
    <attr name="OutCircleProgressColor" format="color" />
    <attr name="Text" format="string" />
    <attr name="TextSize" format="dimension" />

    <declare-styleable name="CircleProgressBar">
        <attr name="InCircleR" />
        <attr name="OutCircleR" />
        <attr name="InCircleColor" />
        <attr name="OutCircleCacheColor" />
        <attr name="OutCircleProgressColor" />
        <attr name="Text" />
        <attr name="TextSize" />
    </declare-styleable>


    <declare-styleable name="GradientTextView">
        <attr name="startColor" format="color|reference" />
        <attr name="endColor" format="color|reference" />
        <attr name="gradientStyle" format="enum">
            <enum name="line_gradient" value="1" />
            <enum name="radio_gradient" value="2" />
            <enum name="sweep_gradient" value="3" />
        </attr>
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color|reference" />
        <attr name="text" format="string|reference" />
    </declare-styleable>


</resources>